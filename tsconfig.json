{
    "compilerOptions": {
      "outDir": "./build",
      "resolveJsonModule": true,
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "lib": ["dom", "esnext"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,

      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictPropertyInitialization": false,
      "paths": {
        "helper/*": ["./helper/*"],
        "openapi/*": ["./openapi/*"]
      },
    },

    "include": [
      "tests/**/*.ts",
      "db_orm/**/*.ts",
      "node_modules/"
    ]
  }
